<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaftarMahasiswaActivity">

<!-- Judul -->
<TextView
    android:id="@+id/tvJudul"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Pendaftaran Data Mahasiswa"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="32dp" />

<!-- Input NIM -->
<EditText
    android:id="@+id/inputDaftarNIM"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="Masukkan NIM"
    android:inputType="text"
    app:layout_constraintTop_toBottomOf="@id/tvJudul"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="24dp"
    android:layout_marginHorizontal="32dp" />

<!-- Input Nama -->
<EditText
    android:id="@+id/inputDaftarNama"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="Masukkan Nama"
    android:inputType="textPersonName"
    app:layout_constraintTop_toBottomOf="@id/inputDaftarNIM"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="32dp" />

<!-- Input Email -->
<EditText
    android:id="@+id/inputDaftarEmail"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="Masukkan Email"
    android:inputType="textEmailAddress"
    app:layout_constraintTop_toBottomOf="@id/inputDaftarNama"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="32dp" />

<!-- Input Password -->
<EditText
    android:id="@+id/inputDaftarPassword"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="Masukkan Password"
    android:inputType="textPassword"
    app:layout_constraintTop_toBottomOf="@id/inputDaftarEmail"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="32dp" />

<!-- Tombol DAFTAR -->
<Button
    android:id="@+id/btnAksiDaftar"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="DAFTAR"
    app:layout_constraintTop_toBottomOf="@id/inputDaftarPassword"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="24dp"
    android:layout_marginHorizontal="64dp"
    android:backgroundTint="#6200EE"
    android:textColor="@android:color/white" />

<!-- Tombol BERSIH -->
<Button
    android:id="@+id/btnAksiBersih"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="BERSIH"
    app:layout_constraintTop_toBottomOf="@id/btnAksiDaftar"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="12dp"
    android:layout_marginHorizontal="64dp"
    android:backgroundTint="#6200EE"
    android:textColor="@android:color/white" />

<!-- Tombol BATAL -->
<Button
    android:id="@+id/btnAksiBatal"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="BATAL"
    app:layout_constraintTop_toBottomOf="@id/btnAksiBersih"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="12dp"
    android:layout_marginHorizontal="64dp"
    android:backgroundTint="#6200EE"
    android:textColor="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>