<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- CARD CONTAINER -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- TITLE -->
            <TextView
                android:id="@+id/txtProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Mahasiswa"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Label NIM -->
            <TextView
                android:id="@+id/txtNIM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIM :"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/txtProfile"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Value NIM -->
            <TextView
                android:id="@+id/txtNIMValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="#111111"
                app:layout_constraintStart_toEndOf="@id/txtNIM"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtNIM" />

            <!-- Label Nama -->
            <TextView
                android:id="@+id/txtNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama :"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/txtNIM"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Value Nama -->
            <TextView
                android:id="@+id/txtNamaValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="#111111"
                app:layout_constraintStart_toEndOf="@id/txtNama"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtNama" />

            <!-- Label Email -->
            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail :"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/txtNama"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Value Email -->
            <TextView
                android:id="@+id/txtEmailValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="#111111"
                app:layout_constraintStart_toEndOf="@id/txtEmail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtEmail" />

            <!-- Button Ubah -->
            <Button
                android:id="@+id/btnEdit"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="UBAH"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:backgroundTint="#7B1FA2"
                android:textColor="#FFFFFF"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@id/txtEmail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Button Keluar -->
            <Button
                android:id="@+id/btnKeluar"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="KELUAR"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:backgroundTint="#D500F9"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/btnEdit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
